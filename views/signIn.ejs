<%- include("header") -%>
<div class="common-container">
    <div class="container">
        <h2>Sign In to Lists</h2>
        <form action="/signin" method="post">
                        <p class="signinMessage"><%= message %></p>
                        <input class="inputBar <%= signinFailedClass %>" name="email"  placeholder="E-mail" autocomplete="off" type="text" required autofocus>
                        <input class="inputBar <%= signinFailedClass %>" name="pass"  placeholder="Password"  autocomplete="off" type="password" required>
                        <br>
                        <button class="signBtn" name="btn" value="signup" type="submit">Sign in</button>
                    </div>
            </form>
    </div>
</div>




<%- include("footer") %> 